chicken_menus = int(input())
fish_menus = int(input())
vegetarian_menus = int(input())

chicken_sum = chicken_menus * 10.35
fish_sum = fish_menus * 12.40
vegetarian_sum = vegetarian_menus * 8.15
delivery_price = 2.50
menus_sum = chicken_sum + fish_sum + vegetarian_sum
desert_price = menus_sum * 0.20
final_price = desert_price + menus_sum + delivery_price
print(final_price)
