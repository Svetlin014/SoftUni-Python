from math import pi
figure_type = input()

if figure_type == "square":
    square_side = float(input())
    area = square_side * square_side
    print(f'{area:.3f}')
elif figure_type == "rectangle":
    side_a = float(input())
    side_b = float(input())
    area = side_b * side_a
    print(f'{area:.3f}')
elif figure_type == "circle":
    radius = float(input())
    area = radius * radius * pi
    print(f'{area:.3f}')
elif figure_type == "triangle":
    side = float(input())
    height = float(input())
    area = side * height / 2
    print(f'{area:.3f}')
